<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/output_tv"
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:layout_marginTop="551dp"
        android:layout_marginBottom="119dp"
        android:text=""
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/c2f_btn"
        android:layout_width="127dp"
        android:layout_height="53dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="421dp"
        android:layout_marginEnd="248dp"
        android:layout_marginBottom="258dp"
        android:text="째C to 째F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/f2c_btn"
        android:layout_width="127dp"
        android:layout_height="55dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="421dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="255dp"
        android:text="째F to 째C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titid"
        android:layout_width="319dp"
        android:layout_height="78dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="555dp"
        android:text="Fahrenheit - Celsius Converter"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/typeid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="398dp"
        android:text="Type the temperature:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="199dp"
        android:layout_height="44dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="477dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/thermo" />

    <EditText
        android:id="@+id/input_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="346dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="340dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultid"
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="222dp"
        android:layout_marginBottom="199dp"
        android:text="Result:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>